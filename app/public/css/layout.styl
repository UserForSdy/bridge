/*

Layout rules divide the page into sections. Layout rules should affect the 'major' components, things like header, primary-col, footer, etc. The 'minor' components are refered to as modules and are dealt with in modules.css.

Examples of Layout Styles:

    #header, #article, #footer {
        width: 960px;
        margin: auto;
    }

    #article {
        border: solid #CCC;
        border-width: 1px 0 0;
    }

    .grid {
        margin: 0;
        padding: 0;
        list-style-type: none;
    }

    .grid > li {
        display: inline-block;
        margin: 0 0 10px 10px; 
    }

*/

@import 'mixins'
@import 'nib'

/*
Override some Bootstrap defaults...
*/
.container, .navbar-fixed-top .container
	width 960px

.row
	margin-left 0

.navbar + .container
	margin-top 40px

.services-wrapper
	margin-top 60px

.reservation-wrapper
	margin-top 30px
	min-width 700px
.reservation-wrapper:first-child
	margin-top 25px

.l-horizontal
	margin 0
	padding 0
	list-style-type none
	// width 100%
.l-horizontal > li
	display inline
	float left
	margin-left 10px
.l-horizontal > li:first-child
	margin-left 0
.l-horizontal > li.pull-right
	float right

/*
Use a div displayed as a table to
shrink wrap and center elements of dynamic width
http://css-tricks.com/centering-list-items-horizontally-slightly-trickier-than-you-might-think/
*/
.wrapper-center
	display table
	margin 0 auto

hr.tight
	margin 18px 0 0

.page-container
	position fixed
	background #eee
	top header_height
	bottom footer_height
	width 100%

.page-container-cleared
	background #EEE
	width 100%
	height 100%
	padding-top 40px
	min-width 1024px
	padding-bottom 20px

@media (max-width: 979px)
	.page-container-cleared
		padding-top 0

.page-container .heading, .page-container-cleared .heading
	raiseText()
	font-size 1.4em
	padding 20px 0 0 0

.center-container
	width 940px
	height 100%
	margin auto
	text-align center
	padding 0 20px 0 20px

.footer
	position fixed
	height footer_height
	bottom 0
	width 100%
	background #222;

.bridge-logo
	position absolute
	top 4px
	margin-left -67px
	width 134px
	height 72px
	background url('/img/icons/ui/bridge-logo.png')