/*

Layout rules divide the page into sections. Layout rules should affect the 'major' components, things like header, primary-col, footer, etc. The 'minor' components are refered to as modules and are dealt with in modules.css.

Examples of Layout Styles:

    #header, #article, #footer {
        width: 960px;
        margin: auto;
    }

    #article {
        border: solid #CCC;
        border-width: 1px 0 0;
    }

    .grid {
        margin: 0;
        padding: 0;
        list-style-type: none;
    }

    .grid > li {
        display: inline-block;
        margin: 0 0 10px 10px; 
    }

*/

@import 'mixins'
@import 'nib'

.container, .navbar-fixed-top .container
	width 960px

.row
	margin-left 0

.navbar + .container
	margin-top 40px

.services-wrapper
	margin-top 60px

.reservation-wrapper
	margin-top 30px
.reservation-wrapper:first-child
	margin-top 25px

.l-horizontal
	margin 0
	padding 0
	list-style-type none
	width 100%
.l-horizontal > li
	display inline
	float left
	margin-left 10px
.l-horizontal > li:first-child
	margin-left 0

hr.tight
	margin 18px 0 0