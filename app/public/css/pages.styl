/*

Page styles are specific to certain areas of the site. For instance if you want to position a component differently in the dashboard vs the offerings section you could specify that by the page id.

*/

// public dashboard //

@import 'mixins'
@import 'icons'

/* 
	!Note! Don't import nib into this file. These styles were created without nib and 
	adding it will break this stylesheet!
*/

#dashboard
	padding-top 40px
	background #EAEAEA
#dashboard .org
	margin 20px
	height 140px
#dashboard p
	font-size 18px
	font-weight bold
#dashboard .orgName 
	float left
	margin-right 10px
#dashboard .orgAddy
	color #27A3FA
#dashboard hr
	clear both
#dashboard .service
	float left
	margin-right 10px
	color #777
	width 180px
	height 140px
	padding 10px 20px 6px 20px
#dashboard .service .text
	margin 0 10px 0 10px
#dashboard .service .text .name
	float left
#dashboard .service .text .avail
	text-align right
#dashboard .service hr
	margin 5px 0 3px 0
#dashboard .img
	width 100%
	height 120px
	border-radius 5px
	-moz-border-radius 5px
	-webkit-border-radius 5px
	text-align center
	line-height 100px

// account login //

#login-container{
	width 340px
	margin 160px auto
	label{
		margin 15px 0 5px 5px
	}
	button{
		width 150px
		padding 6px 40px 6px 40px
		float left
		margin-top 15px
	}
	.checkbox{
		margin 23px 0 0 180px
	}
	.btm-links{
		text-align center
		margin-top 10px
	}
	#create-account{
		float:right
		margin-right:13px
	}	
	#forgot-password{
		float:left
		margin-left:10px
	}
}

// account signup   //

#signup-container{
	width 460px
	margin 100px auto
	#signup-page-2{
		display none
	}
	.well{
		padding-bottom 5px
	}
	.dropdown{
		width 280px
	}
	.two-line{
		margin-top -9px
	}
	.form-horizontal .controls{
		margin-left 100px
	}
	.form-horizontal .control-label{
		width 90px
	}
	.form-horizontal .form-actions{
		margin 0	
		padding-left 255px
	}
}


// ------account area------//

// inventory //

#inventory #all-services
	float left
	width 180px
	height 100%
	background #eaeaea
	border-right thin double #ccc;
#inventory #all-services .heading
	text-align center

#inventory #our-services
	margin-left 180px
	padding 0 20px 0 20px
#inventory #our-services .heading
	padding-left 20px
	
// service elements shared by both services & offerings

#inventory .service
	width 100px
	height 140px
	margin auto
	margin-bottom 10px
	padding 10px 20px 6px 20px
	drawContainer()
#inventory .service hr
	margin 5px 0 3px 0
#inventory .service .icon
	width 100%
	height 125px
	text-align center
	line-height 105px
	cursor pointer

// specific to all-services
#inventory #all-services .service .text
	text-align center

// specific to our-services
#inventory #our-services .service
	position relative
	float left
	width 180px
	margin-left 10px
#inventory #our-services .service .edit
	width 28px
	height 28px
	cursor pointer
	position absolute
	top -10px
	right -10px
	background url('/img/icons/edit.png')
#inventory #our-services .service .text
	float left
	text-align left
#inventory #our-services .service .avail
	text-align right
#inventory #our-services .services
	overflow hidden
	padding-top 18px
#inventory #our-services #edit-avail
	display none
#inventory #our-services #edit-avail .del, .add
	position absolute
	top 34px
	width 90px
	height 110px
	opacity 0
	cursor pointer
	background-color #333
#inventory #our-services #edit-avail .add
	margin-left 90px
#inventory #our-services #edit-avail .icon-add, .icon-del
	position absolute
	bottom 10px
#inventory #our-services #edit-avail .icon-add
	right 18px

// inventory editor //

#inv-editor label
	width 60px
	text-align right
	margin-bottom 15px
#inv-editor input
	width 50px
	padding-right 10px
	text-align right
	margin -23px 0 0 75px


// team //

#team .heading
	text-align left
	padding-left 20px
.member
	padding 10px
	margin 20px
	drawContainer()
	text-align center
	display inline-block
	*display inline
	*margin 0 20px 0 20px
.member .image
	width 100px
	height 100px
	margin auto
	margin-bottom 10px
	drawDiagonalStripes()

// clients //

#clients-page .heading
	text-align left
	padding-left 20px
#clients-page #controls
	position absolute
	top 4px
	right 235px
#clients-page #controls
	padding 10px
#clients-page #controls .input-medium
	width 225px
	margin 0
#clients-page #controls #search
	width 80px
#clients-page #controls #register
	width 120px
#clients-page .member
	cursor pointer
	position relative
	margin 0 5px 0 5px
#clients-page .member .edit
	width 28px
	height 28px
	cursor pointer
	position absolute
	top -8px
	right -8px
	background url('/img/icons/edit.png')

// client registration & editing //

#add-client .well
	height 316px
#add-client #btn1, #btn2
	top 445px
#edit-client .well
	height 261px
#edit-client #btn1, #edit-client #btn2
	top 390px
