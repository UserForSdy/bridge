/*  --------------------------------------------------
    :: Menus
    -------------------------------------------------- */
.menu-item
	position relative
	width 220px
	height 166px
	background-color #EBEBEB
	margin 0 auto 30px
	border-radius 5px
	box-shadow 2px 2px 3px rgba(0, 0, 0, 0.1)
	overflow hidden
.menu-item.is-selected
	box-shadow 0 0 0 5px #94D043, 0 0 3px 5px rgba(0, 0, 0, 0.1)
.menu-chrome
	position absolute
	z-index 2
	top 0
	left 0
	width 100%
	height 100%
	border 1px solid #ACACAC
	box-shadow inset -1px -1px 1px rgba(255, 255, 255, 0.4), inset 1px 1px 1px rgba(255, 255, 255, 0.4)
	border-radius 5px
.menu-header
	height 40px
	background #DADADA
	border-bottom 1px solid #CBCBCB
	text-align center
	border-radius 5px 5px 0 0
.menu-header > h2
	line-height 40px
.menu-thumbnail
	background-image url('../img/bkgd/menu-item-background.jpg')
	background-repeat repeat-x
	float left
	position relative
	width 160px
	height 126px
	border-right 1px solid #D9D9D9
	box-shadow inset -1px 0 0 #E5E5E5
.menu-thumbnail > img
	position absolute
	top 50%
	margin-top -55px
	left 50%
	margin-left -50px
.menu-progress
	background-image url('../img/bkgd/menu-item-background.jpg')
	background-repeat repeat-x
	float left
	position relative
	height 126px
	width 58px
	box-shadow inset 1px 0 0 #F0F0F0

/*  --------------------------------------------------
    :: Components
    -------------------------------------------------- */
.v-progress
	width 15px
	height 100px
	overflow hidden
	margin 13px auto
	border-radius 10px
	background #F5F5F5
	border 1px solid #C4C4C4
	box-shadow -1px 0 #F0F0F0, inset -1px 0 rgba(0, 0, 0, 0.1)
.v-progress-bar
	width 15px
	height 100%
	margin-top 50px
	background-color #0E90D2
	background-image linear-gradient(top, #5AC911, #6CCC0B)
	background-repeat repeat-x
	filter unquote('progid:dximagetransform.microsoft.gradient(startColorstr="#5AC911",endColorstr="#6CCC0B",GradientType=0)')
	box-shadow inset -3px -1px rgba(0, 0, 0, 0.15), inset 1px 1px rgba(0, 0, 0, 0.15), inset 2px 0 rgba(255, 255, 255, 0.15)
	transition margin-top .6s ease

/*  --------------------------------------------------
    :: Buttons
    -------------------------------------------------- */
.button
	border-radius 5px
	text-transform uppercase
	text-align center

.button-reserve
	display block
	padding 0
	margin-top 45px
	background-color #8D8D8D
	background-image linear-gradient(top, #939393, #7B7B7B)
	background-repeat repeat-x
	filter unquote('progid:dximagetransform.microsoft.gradient(startColorstr="#939393",endColorstr="#7B7B7B",GradientType=0)')
	height 50px
	line-height 50px
	font-size 25px
	color #DADADA
	text-shadow 0 -1px 0 #968E8F, 0 1px 0 #BDD2B3
	letter-spacing 2px
.button-reserve:hover
	color #DADADA
.button-reserve.active
	border 1px solid #58AC00;
	background-color #93d141
	background-image linear-gradient(top, #76CC06, #51C001)
	background-repeat repeat-x
	filter unquote('progid:dximagetransform.microsoft.gradient(startColorstr="#A2C32A",endColorstr="#8FB722",GradientType=0)')
	box-shadow 1px 1px 3px rgba(0, 0, 0, 0.2), -1px -1px 3px rgba(0, 0, 0, 0.2), inset 0 1px #88E700


