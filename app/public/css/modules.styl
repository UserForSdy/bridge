/*  --------------------------------------------------
    :: Menus
    -------------------------------------------------- */

.menu-wrapper ul
	margin 0
.menu-wrapper li
	display	inline-block
	margin-right 22px
.menu-wrapper li:nth-child(4n)
	margin-right 0

.menu-item
	position relative
	width 220px
	height 166px
	background-color #EBEBEB
	margin 0 auto 30px
	border-radius 5px
	box-shadow 2px 2px 3px rgba(0, 0, 0, 0.1)
.menu-item > .button-edit
	display none
	position absolute
	top -20px
	right -20px
	z-index 3
.menu-item.is-selected
	box-shadow 1px 1px 0 5px #94D043, 0 0 3px 5px rgba(0, 0, 0, 0.1)
.menu-item.is-selected > .button-edit
	display block

.menu-chrome
	position absolute
	z-index 2
	top 0
	left 0
	width 100%
	height 100%
	border 1px solid #ACACAC
	box-shadow inset -1px -1px 1px rgba(255, 255, 255, 0.4), inset 1px 1px 1px rgba(255, 255, 255, 0.4)
	border-radius 5px

.menu-header
	height 40px
	background #DADADA
	border-bottom 1px solid #CBCBCB
	text-align center
	border-radius 5px 5px 0 0
.menu-header > h2
	line-height 40px
	text-transform uppercase

.menu-thumbnail
	background-image url('../img/bkgd/menu-item-background.jpg')
	background-repeat repeat-x
	float left
	position relative
	width 160px
	height 124px
	border-right 1px solid #D9D9D9
	box-shadow inset -1px 0 0 #E5E5E5
	line-height 123px
	text-align center

.menu-progress
	background-image url('../img/bkgd/menu-item-background.jpg')
	background-repeat repeat-x
	float left
	position relative
	height 124px
	width 58px
	box-shadow inset 1px 0 0 #F0F0F0

/*  --------------------------------------------------
    :: Components
    -------------------------------------------------- */

.v-progress
	width 15px
	height 100px
	overflow hidden
	margin 13px auto
	border-radius 10px
	background #F5F5F5
	border 1px solid #C4C4C4
	box-shadow -1px 0 #F0F0F0, inset -1px 0 rgba(0, 0, 0, 0.1)
.v-progress-bar
	width 15px
	height 100%
	margin-top 50px
	background-color #0E90D2
	background-image linear-gradient(top, #5AC911, #6CCC0B)
	background-repeat repeat-x
	filter unquote('progid:dximagetransform.microsoft.gradient(startColorstr="#5AC911",endColorstr="#6CCC0B",GradientType=0)')
	box-shadow inset -1px -1px rgba(0, 0, 0, 0.15), inset 1px 1px rgba(0, 0, 0, 0.15), inset 2px 0 rgba(255, 255, 255, 0.15)
	transition margin-top .6s ease

/*  --------------------------------------------------
    :: Reservations
    -------------------------------------------------- */

.reservation
	height 250px
	margin-bottom 30px
	background #EEEEEE
	border-radius 10px
	box-shadow inset 0 0 5px 3px #AFAFAF
	overflow hidden

.reservation-header
	height 45px
	color white
	font-size 16px
	border-radius 3px
	border-bottom 1px solid #737373
	background-image linear-gradient(top, #5F5E5E, #4B4A4A)
	box-shadow inset 0 -1px #414141, inset 1px 1px #717070, inset -1px 0 #717070, 0 1px 5px 1px #AFAFAF
.reservation-header > .reservation-info
	padding-top 14px
	padding-left 27px

.reservation-entries
	padding-top 18px
	padding-left 20px
.reservation-entries > li:last-child
	margin-left 20px

/*  --------------------------------------------------
    :: Modals
    -------------------------------------------------- */
/*
Override some Bootstrap defaults
*/
.modal
	overflow visible

.modal-backdrop, .modal-backdrop.fade.in
	opacity 0.3

.modal-header .button-close
	position absolute
	top -20px
	right -20px

/* @extends .modal */
.modal-centered
	width 600px
	margin -250px 0 0 -300px
	text-align center

.modal-centered .modal-header
	padding 26px 40px 21px
	color #6B6B6B
	text-transform uppercase
	line-height 58px
	border-bottom 1px solid #D5D4D4

.modal-centered h3
	font-size 22px
	font-weight normal

.modal-centered .modal-body
	font-size 15px
	padding 25px 40px 25px

/*  --------------------------------------------------
    :: Buttons
    -------------------------------------------------- */

.button
	display inline-block
	color #FFF
	border-radius 5px
	text-shadow 0 -1px 0 #615D62, 0 1px 0 #B5B5B6
	text-transform uppercase
	text-align center
.button:hover
	color #FFF

.button.loud, .button.is-enabled
	loudButton()

.button.quiet, .button.is-disabled
	quietButton()

