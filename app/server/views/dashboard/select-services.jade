include dashboard-header

#select-services.container
	div.services-wrapper
		div.row
			ul
				- for (var i = services.length - 1; i >= 0; i--)
					li
						div(data-category=services[i].name).service
							img.button-edit(src="../img/icons/latest/icon-edit.png")
							div.service-chrome
							div.service-header
								h2 #{services[i].name}
							div.service-thumbnail
								img(src='/img/icons/latest/icon-'+services[i].name+'-general.png')
							div.service-progress
								div.v-progress
									div.v-progress-bar
	div.row
		a#request-services.button.button-reserve Reserve

a#btn-timeout.btn Timeout
a#btn-reservation-confirm.btn Confirm
a#btn-reservation-success.btn Success

include modals/welcome
include modals/goodbye
include modals/timeout
include modals/reservation-confirm
include modals/reservation-success
include modals/service-selection

