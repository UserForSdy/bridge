
extends ../layout


	div(style='margin:20px')
		table.table.table-bordered.table-striped
			thead
				tr
					th #
					th Client Id
					th Services
					th Provider
					th Reservation Made
			tbody
			- for (var i = 0; i < reservations.length; i++)
				tr
					td= i+1
					td= reservations[i].client
					td
						- var o = reservations[i].services;
						- for (var k = 0; k < o.length; k++)
							| #{o[k].cat} :: #{o[k].sub}<br>
					td= capitalize(reservations[i].provider)
					td= reservations[i].date