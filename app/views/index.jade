
- var capitalize = function(s){return s.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});}

#orgs
	- for (var i = 0; i < orgs.length; i++)
		div(id=orgs[i].name)
			p.orgName= orgs[i].name
			- for (var k = 0; k < orgs[i].inv.length; k++)
				- var c = orgs[i].inv[k];
				- var cn = capitalize(c.name)
				table(id=c.name).table.table-bordered.table-striped
					thead
						th Available #{cn}
						- for (var j = 0; j < c.fields.length; j++)
							- var f = c.fields[j];
							- var fn = capitalize(f.name)
							th #{fn} #{cn}
					tbody
						tr
							td #{c.avail} / #{c.total}
							- for (var j = 0; j < c.fields.length; j++)
								td #{c.fields[j].avail} / #{c.fields[j].total}
			hr

